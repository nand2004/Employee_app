<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Employee Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
</head>
<body>

    
    <nav class="navbar justify-content-between px-4" style="background-color: rgb(4, 135, 164);">
        <% nav.forEach(item => { %>
            <a class="navbar-brand" href="<%= item.link %>" style="color: white;" ><%= item.name %></a>
        <% }); %>
    </nav>

    <div class="container mt-4">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% data.forEach(emp => { %>
            <div class="col">
                <div class="card h-100" style="background-color: rgb(245, 240, 186);">
                    <div class="card-body">
                        <h5 class="card-title">Name: <%= emp.name %></h5>
                        <p class="card-text">Designation: <%= emp.designation %></p>
                        <p class="card-text">Location: <%= emp.location %></p>
                        <p class="card-text">Salary: â‚¹<%= emp.salary %></p>
                       </div>
                    <div class= "m-2">
                        <a href="/basic/edit/<%= emp.id %>" class="btn btn-primary btn-sm">Edit</a>
                        <a href="/basic/delete/<%= emp.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Delete this employee?')">Delete</a>
                    </div>
                </div>
                
            </div>
            <% }); %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>